<header class = "header">
    <h1>Scraping Time!</h1>
    <nav class= "button-group">
        <button class="button-dark" id="scrape" data-toggle="modal" data-target="#alertModal">Scrape New Articles?</button>
        <a href="/articles/viewSaved"><button class= "button-dark" id="viewSaved">View Saved Articles?</button></a>
    </nav>
</header>
<div class="filler"></div>
{{#each article}}
{{#unless saved}}
<figure class="storyPanel clearfix">
    <a href="{{storyUrl}}" class="pull-right" target="_blank">
        <div class= "imgBox">
            <img src="{{imgUrl}}" alt="" class="storyImg" height= "150">
                    </div>
                        </a>
                        {{#if storyUrl}}
                        <a href= "{{storyUrl}}" class="storyLink" target="_blank">
                            <h2 class="storyHeadline">{{headline}}</h2>
                        </a>
                        {{else}}
                        <h3 class="storyHeadline">{{headline}}</h3>
                        {{/if}}
                        <h5 class="storyByline">{{byLine}}</h5>
                        <h6 class="storySummary">{{summary}}</h6>
                        </figure>
                        {{/unless}}
                        {{/each}}
{{!-- Number of scraped articles --}}
<div id="alertModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-mid">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body text-center">
                <h2>You have scraped <span id="numArticles"></span>new articles!</h2>
            </div>
        </div>
    </div>
</div>

{{!-- For errors --}}
<div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h2>There was an error processing your request. Try again?</h2>
            </div>
        </div>
    </div>

</div>